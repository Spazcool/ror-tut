<h1>Posts#new</h1>

<%= form_for @post do |f| %>
    <p>
        <%= f.label :title %>
        <%= f.text_field :title %>
    </p>
    <p>
        <%= f.label :body %>
        <%= f.text_area :body %>
    </p>
    <p>
        <%= f.select :category_id, Category.all.pluck(:name,:id),{prompt:'select'}%>
    </p>
    <p>
        <%= f.submit 'Add Post'%>
    </p>
<% end %> 